@model project.Models.BookingViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking Confirmation</title>
    <link rel="stylesheet" href="style.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #4CAF50;
        }

        .details p {
            font-size: 18px;
            margin: 10px 0;
            color: #333;
        }

        .seats ul {
            list-style-type: none;
            padding: 0;
        }

        .seats li {
            background-color: #f9f9f9;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
        }

        .total-price {
            font-size: 22px;
            font-weight: bold;
            color: #d9534f;
            text-align: right;
            margin-top: 20px;
        }

        .back-button {
            display: block;
            width: 100%;
            margin-top: 20px;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .back-button:hover {
                background-color: #45a049;
            }

        

        .random-id {
            background-color: #e0ffe0; /* Light green background */
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px; /* Larger font size for emphasis */
            color: #4CAF50; /* Match title color */
        }
        .seats{
            font-size:18px;
            color:black;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Booking Confirmation</h1>

        <div class="details random-id">
            <p>
                <strong>Ticket ID:</strong> @Model.RandomId<span>

                    (Please show this ID to the staff to retrieve your tickets.)
                </span>
            </p>
          
        </div>


        <div class="seats">
            <p><strong>Name:</strong> @Model.CustomerName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Movie:</strong> @Model.Movie.Title</p>
            <p>
                <strong>Showtime:</strong>
                @Model.Showtime.ShowDate.ToString("dd-MM-yyyy")
                @Model.Showtime.StartTime - @Model.Showtime.EndTime
            </p>
            <h2>Selected Seats:</h2>
            <ul>
                @foreach (var seat in Model.SelectedSeats)
                {
                    <li>
                        <span>Seat: @seat</span>
                        <span>Price: @Model.SeatPrices[seat] PKR</span>
                    </li>
                }
            </ul>
        </div>

        <div class="total-price">
            Total Price:
            @Model.SelectedSeats.Sum(seat => Model.SeatPrices[seat]) PKR
        </div>

      

        <a href="/" class="back-button">Back to Home</a>
    </div>
</body>
</html>
