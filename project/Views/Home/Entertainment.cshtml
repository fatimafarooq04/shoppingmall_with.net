@model project.Models.MovieViewModel

<!DOCTYPE html>
<html lang="en">

<head>
	<title>Minishop - Free Bootstrap 4 Template by Colorlib</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<style>
		#shop {
			background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), /* Semi-transparent black overlay */
			url('../assests/images/entertainment.jpg'); /* Your background image */
			object-fit:cover;
			background-size: cover; /* Ensures the image covers the entire section */
			background-position: center; /* Centers the background image */
			background-repeat: no-repeat; /* Prevents repetition of the background */
		}

		.movie-card {
			position: relative;
			overflow: hidden;
			border: none;
			border-radius: 10px;
		}

			.movie-card img {
				border-radius: 10px;
				height: 300px;
				width: 100%;
				transition: transform 0.3s;
			}

			.movie-card:hover img {
				transform: scale(1.05);
			}

		.overlay1 {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color: rgba(0, 0, 0, 0.6);
			color: #fff;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			opacity: 0;
			transition: opacity 0.3s;
			border-radius: 10px;
		}

		.movie-card:hover .overlay1 {
			opacity: 1;
		}

		.movie-title {
			color:white;
			font-size: 2.2em;
			font-weight: bold;
			margin-bottom: 10px;
			text-align: center;
		}

		.btn {
			margin: 5px;
		}
	</style>
</head>

<body class="goto-here">
	@Html.Partial("userheader")
	<div class="hero-wrap hero-bread" id="shop">
		<div class="container">
			<div class="row no-gutters slider-text align-items-center justify-content-center">
				<div class="col-md-9 ftco-animate text-center">
					<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Shop</span></p>
					<h1 class="mb-0 bread">Shop</h1>
				</div>
			</div>
		</div>
	</div>

	<section class="ftco-section bg-light">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-10 order-md-last">
					<div class="row">
						@foreach (var movie in Model.Movies)
						{
							<div class="col-md-4 mb-4">
								<div class="container mt-5">
									<div class="card movie-card">
										<img src="@movie.Poster" class="card-img-top" alt="Movie Poster">
										<div class="overlay1">
											<h5 class="movie-title">@movie.Title</h5>
											<button class="btn btn-primary book-now"><a asp-controller="Home" asp-action="EntertainmentDetail" asp-route-id="@movie.MovieId" style="color:white">View Details</a> </button>
											<button class="btn btn-primary book-now">
												<a asp-controller="Home"
												   asp-action="MovieSeat"
												   asp-route-movieId="@movie.MovieId"
												   style="color:white; text-decoration:none;">
													Book Now
												</a>
											</button>
										</div>
									</div>
								</div>
							</div>
						}
					</div>
					<div class="row mt-5">
						<div class="col text-center">
							<div class="block-27">
								<ul>
									<li><a href="#">&lt;</a></li>
									<li class="active"><span>1</span></li>
									<li><a href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">4</a></li>
									<li><a href="#">5</a></li>
									<li><a href="#">&gt;</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4 col-lg-2">
					<div class="sidebar">
						<div class="sidebar-box-2">
							<h2 class="heading">Categories</h2>
							<div class="fancy-collapse-panel">
								<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
									<div class="panel panel-default">
										<div class="panel-heading" role="tab" id="headingOne">
											<h4 class="panel-title">
												<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
													Language
												</a>
											</h4>
										</div>
										<div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
											<div class="panel-body">
												<ul>
													@foreach (var language in Model.Languages)
													{
														<li><a href="@Url.Action("Entertainment", new { selectedLanguage = language })">@language</a></li>
													}
												</ul>
											</div>
										</div>
									</div>
									<div class="panel panel-default">
										<div class="panel-heading" role="tab" id="headingTwo">
											<h4 class="panel-title">
												<a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
													Genre
												</a>
											</h4>
										</div>
										<div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
											<div class="panel-body">
												<ul>
													@foreach (var genre in Model.Genres)
													{
														<li><a href="@Url.Action("Entertainment", new { selectedGenre = genre })">@genre</a></li>
													}
												</ul>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


	@Html.Partial("userfooter")

	<!-- loader -->
	<div id="ftco-loader" class="show fullscreen">
		<svg class="circular" width="48px" height="48px">
			<circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
			<circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
					stroke="#F96D00" />
		</svg>
	</div>

</body>

</html>
